{
  "manifest_version": 2,
  "name": "7TV Extension",
  "version": "1.0.0",
  "description": "A browser extension for 7TV",
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://7tv.app/*", "*://*.7tv.app/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://7tv.app/*",
    "*://*.7tv.app/*",
    "*://api.7tv.app/*"
  ],
  "web_accessible_resources": ["assets/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "7tv-extension@example.com",
      "strict_min_version": "109.0"
    }
  }
}
